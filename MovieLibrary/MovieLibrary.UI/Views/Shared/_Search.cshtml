@model MovieLibrary.UI.Models.SearchRequestVM

<div class="form-row">
    <div class="col input-group mb-3">
        @using (Html.BeginForm("Search", "Home", FormMethod.Post))
        {
            @Html.ValidationSummary()
            @Html.TextBoxFor(m => m.SearchQuery, new
            {
                @class = "form-control",
                placeholder = "Search Title",
                aria_label = "Search Title",
                aria_describedby = "searchBtn"
            })

            <div class="input-group-append">
                <button type="submit" class="btn btn-outline-secondary" id="searchBtn">Search</button>
            </div>
        }
    </div>
</div>