<div class="input-group mb-3">
    @using (Html.BeginForm("Search", "Home", FormMethod.Get))
    {
        @Html.TextBox("query", null, new
        {
            @class = "form-control",
            placeholder = "Search Title",
            aria_label = "Search Title",
            aria_describedby="searchBtn"
        })
        <div class="input-group-append">
            <button type="submit" class="btn btn-outline-secondary" id="searchBtn" value="query">Search</button>
        </div>
    }
</div>